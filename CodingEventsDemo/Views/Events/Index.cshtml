@model List<CodingEventsDemo.Models.Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>


<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Event Name</th>
                <th scope="col">Description</th>
                <th scope="col">Email</th>
                @*<th scope="col">Location</th>
                  <th scope="col">Number of Attendees</th>*@
                <th scope="col">Event Type</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Event evt in Model)
            {
                <tr>
                    <td scope="row">@evt.Id</td>
                    <td scope="row">@evt.Name</td>
                    <td scope="row">@evt.Description</td>
                    <td scope="row">@evt.ContactEmail</td>
                    @*<td scope="row">@evt.Location</td>
                    <td scope="row">@evt.NumberOfAttendees</td>*@
                    <td scope="row">@evt.Type</td>
                </tr>
            }
        </tbody>
    </table>
}





